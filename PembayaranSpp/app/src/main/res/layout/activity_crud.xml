<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:id="@+id/datapetugas"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
            android:id="@+id/idpetugasTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            tools:ignore="MissingPrefix"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Pilih Petugas"
            android:fontFamily="@font/didact_gothic"
            android:textColor="@color/purple_700"
            app:met_floatingLabel="normal">

        </com.rengwuxian.materialedittext.MaterialAutoCompleteTextView>

        <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
            android:id="@+id/idnisnTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            tools:ignore="MissingPrefix"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Pilih Nisn"
            android:fontFamily="@font/didact_gothic"
            android:textColor="@color/purple_700"
            app:met_floatingLabel="normal">

        </com.rengwuxian.materialedittext.MaterialAutoCompleteTextView>

        <android.helper.DateTimePickerEditText
            android:id="@+id/idtanggalTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:hint="Tanggal dibayar"
            tools:ignore="MissingPrefix" />

        <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
            android:id="@+id/idbulanTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            tools:ignore="MissingPrefix"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Pilih Bulan"
            android:fontFamily="@font/didact_gothic"
            android:textColor="@color/purple_700"
            app:met_floatingLabel="normal">

        </com.rengwuxian.materialedittext.MaterialAutoCompleteTextView>

        <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
            android:id="@+id/idtahunTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            tools:ignore="MissingPrefix"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Pilih Tahun"
            android:fontFamily="@font/didact_gothic"
            android:textColor="@color/purple_700"
            app:met_floatingLabel="normal">

        </com.rengwuxian.materialedittext.MaterialAutoCompleteTextView>

        <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
            android:id="@+id/id_sppTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            tools:ignore="MissingPrefix"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="ID Spp"
            android:fontFamily="@font/didact_gothic"
            android:textColor="@color/purple_700"
            app:met_floatingLabel="normal">

        </com.rengwuxian.materialedittext.MaterialAutoCompleteTextView>

        <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
            android:id="@+id/id_jumlahbayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:hint="Jumlah Bayar"
            android:fontFamily="@font/didact_gothic"
            android:textColor="@color/purple_700"
            app:met_floatingLabel="normal">

        </com.rengwuxian.materialedittext.MaterialAutoCompleteTextView>

    </LinearLayout>

</ScrollView>